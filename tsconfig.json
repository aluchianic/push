{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "pretty": true,
        "lib": [ "es2015", "webworker", "dom" ],
        "skipLibCheck": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "checkJs": false,
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "inlineSourceMap": true
    },
    "exclude": [
        "__build__/**",
        "**/node_modules/**",
        "**/tests/**"
    ]
}
